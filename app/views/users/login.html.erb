<html>
  <head>
  </head>
  <body>
    <div class= "login">
      <h1>ログイン画面</h1>
      <%= form_for @user, :url => check_path, :html => { :method => :post } do |user| %>
        <h2>ログインID</h2>
        <p><%= user.text_field :login_id %></p>
        <h2>パスワード</h2>
        <p><%= user.password_field :password_digest %></p>
        <p class= "login_button"><%= user.submit(["Login"], value: "ログイン", id: "login_submit") %></p> 
      <% end %>
    </div>
    <% if flash[:alert] %>
      <div class="alert_denger">
        <%= flash[:alert] %>
      </div>
    <% end %>
  </body>
</html>
