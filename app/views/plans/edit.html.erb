<h1>edit</h1>

<%= form_for @plan, :url => plans_update_path, :html => {:method => "put"} do |i| %>

  <p>
    <%= i.label 'title' %><br>
    <%= i.text_field 'title' %>
  </p>
  <p>
    <%= i.label 'start_at' %><br>
    <%= i.datetime_select 'start_at' %>
  </p>
  <p>
    <%= i.label 'end_at' %><br>
    <%= i.datetime_select 'end_at' %>
  </p>
  <p>
    <%= i.label 'detail' %><br>
    <%= i.text_field 'detail' %>
  </p>
  <p>
    <%= i.label 'color_id' %><br>
    <%= i.collection_select 'color_id', Color.all, :id, :color_name, :include_blank => true %>
  </p>
  <p>
    <%= i.submit '登録' %>
  </p>

<% end %>

<p><%= link_to '戻る', index_path %></p>

